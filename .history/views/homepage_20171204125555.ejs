<div class="container-fluid">
  <div class="blah-blah"></div>
  <div class="blabber-bg">
    <form id="create-blab">
      <input id="blab-upvote" name="upvotes" type="hidden" value="1">
      <label class="blab-content-label" for="blab-content">Hey, wanna write something stupid?</label>
      <textarea class="blab-content-input" name="text" id="blab-content" rows="3" placeholder="Stupid goes here..."></textarea>
      <label class="blab-email-label" for="blabber-email">Identify thyself</label>
      <input class="blab-email-input" id="blabber-email" name="email" type="email" required placeholder="Enter your e-mail" autocomplete="on">
      <input class="blab-send-button" type="button" value="Blab it!"></input>
    </form>
  </div>
</div>
<br/>
<div id="blabs-container" class="blabber-bg">
  <div id="empty-blab" class="blab-container">
    <div class="blab-image">
      <img src="images/potato.png">
    </div>
    <div class="blab-body">
      <div class="blab-email">someone@somewhere.com</div>
      <div class="blab-content">saying something stupid</div>
      <div class="blab-actions">
        <a href="#" class="delete-blab">delete</a>
        <span> · </span>
        <a href="#" class="upvote-blab">upvote (<span class="blab-upvotes">1</span>)</a>
        <span> · </span>
        <a class="blab-time">time</a>
      </div>
    </div>
  </div>
</div>
